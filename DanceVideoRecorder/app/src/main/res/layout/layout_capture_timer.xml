<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:padding="15dp">

    <TextView
        android:id="@+id/time_0s"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/time_3s"
        android:text="0S"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="2dp"
        android:background="@drawable/rectangle_border_button" />

    <TextView
        android:id="@+id/time_3s"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/time_0s"
        app:layout_constraintEnd_toStartOf="@id/time_5s"
        android:text="3S"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="2dp"
        android:background="@drawable/rectangle_border_button" />
    <TextView
        android:id="@+id/time_5s"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/time_3s"
        app:layout_constraintEnd_toStartOf="@id/time_10s"
        android:text="5S"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="2dp"
        android:background="@drawable/rectangle_border_button" />

    <TextView
        android:id="@+id/time_10s"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/time_5s"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="10S"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="2dp"
        android:background="@drawable/rectangle_border_button" />


</androidx.constraintlayout.widget.ConstraintLayout>